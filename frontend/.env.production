# Production environment configuration for Render deployment
# This file sets the correct API URL for production builds

# Backend API URL for production (Render deployment)
# Using relative URL so it works with any domain
# REACT_APP_API_BASE_URL=https://modern-product-search.onrender.com/api/v1

# Disable source maps in production for security
GENERATE_SOURCEMAP=false

# Optimize bundle size
INLINE_RUNTIME_CHUNK=false

# Enable production optimizations
REACT_APP_ENVIRONMENT=production

# API timeout settings for production
REACT_APP_API_TIMEOUT=15000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=2000
